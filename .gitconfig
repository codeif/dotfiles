[core]
    editor = vim
    excludesfile = ~/.gitignore_global
[merge]
    tool = vimdiff
[alias]
    lg = log --graph --abbrev-commit --pretty=format:'%C(red)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset'
    co = checkout
    br = branch
    ci = commit
    st = status
[color]
    ui = auto
[push]
    default = simple
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED
[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[pager]
    branch = false
